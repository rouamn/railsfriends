<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<br>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" , placeholder:"Email" %>
  </div>

  <div class="field" >
    <% if @minimum_password_length %>
   
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" , placeholder:"Password(6 characters minimum)" %>
  </div>
  <br>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" , placeholder:"Passworld_Confirmation" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" , class:"btn btn-secondary" %>
  </div>
  
<% end %>
<%= render "devise/shared/links" %>

