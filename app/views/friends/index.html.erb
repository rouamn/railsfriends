<% if user_signed_in? %>
 
 <h1>Friend List</h1>
<br>

<table class="table table-striped table table-hover  table-bordered ">
  <thead class="table-dark">
    <tr>
      <th> Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
     </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td><%= link_to  friend.first_name  + ' ' + friend.last_name , friend %> 
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path , class:"btn btn-dark" %>
 <% else %>
      <h1>Hello world ! </h1>
      <p>this is my first rails webpage</p>
      <% end %>
